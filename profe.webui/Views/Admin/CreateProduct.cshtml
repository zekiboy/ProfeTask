@model profe.webui.Models.ProductModel

<h2>Create Product</h2>
<hr>
<div class="row">
    <form action="/Admin/CreateProduct" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group ">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Stock">
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea id="Description" class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="form-group">
            <label for="ImgUrl">Image Url</label>
            <input type="file" name="file">
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger mt-2">Add</button>
        </div>

    </form>
</div>


